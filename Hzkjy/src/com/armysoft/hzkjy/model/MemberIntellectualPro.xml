<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MemberIntellectualProOpt">

	<!-- 表列名 -->
	<sql id="columns">	
	Id,MemberNo,ProjectLevel,ProjectType,ProjectName,ApplyAmount,IsSetUp,SetUpAmount,ApplyTime
	</sql>
	<!-- 通用条件sql语句 -->
	<sql id="condition" >
		from member_intellectual_pro 
	  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				  				order by id desc
	</sql>

    <select id="findByKey" resultType="java.util.Map" parameterType="Long">
		select * from member_intellectual_pro where Id = #{id}
	</select>

		
	<select id="page" resultType="java.util.Map" parameterType="java.util.Map">
		select 
		<include refid="columns"/>
		<include refid="condition" />
		<include refid="org.armysoft.ibatis.commonsql.mysqlpager"/>
	</select>
	<select id="pageCount" resultType="int" parameterType="java.util.Map">
		select count(*) 
		<include refid="condition" />
	</select>
	<!-- 保存 -->
	<insert id="insert" parameterType="memberIntellectualPro">
		insert into member_intellectual_pro(MemberNo,ProjectLevel,ProjectType,ProjectName,ApplyAmount,IsSetUp,SetUpAmount,ApplyTime)
		values(#{memberNo} 		
		, #{projectLevel} 		
		, #{projectType} 		
		,       #{projectName}
		 ,		#{applyAmount}
		 ,		#{isSetUp}
		 ,		#{setUpAmount}
		 ,		#{applyTime}
		  )
		</insert>

	<!-- 修改 -->
	<update id="update" parameterType="memberIntellectualPro">
		update member_intellectual_pro set 
		 										ProjectLevel=#{projectLevel}
		 								,		ProjectType=#{projectType}
		 								,		ProjectName=#{projectName}
		 								,		ApplyAmount=#{applyAmount}
		 								,		IsSetUp=#{isSetUp}
		 								,		SetUpAmount=#{setUpAmount}
		 								,		ApplyTime=#{applyTime}
		 							where Id = #{id}
	</update>

	<!-- 删除 -->
	<delete id="delete" parameterType="Long">
		delete from member_intellectual_pro where Id = #{id}
	</delete>
	
	<!-- ********************************************* -->

</mapper>